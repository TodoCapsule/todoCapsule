{{>layouts/header}}

<div class="container mt-4">
    <!-- 테이블 -->
    <table class="table">
        <thead>
        <tr>
            <th class="text-center">Task</th>
            <th class="text-center">Title</th>
            <th class="text-center">Content</th>
            <th class="text-center">Category</th>
            <th class="text-center">Date</th>
            <th class="text-center">Completed</th>
        </tr>
        </thead>
        <tbody>
        {{#plannerList}}
            <tr>
                <td class="text-center">{{id}}</td>
                <td class="text-center"><a href="/planner/{{id}}">{{title}}</a></td>
                <td class="text-center">{{content}}</td>
                <td class="text-center">{{category}}</td>
                <td class="text-center">{{date}}</td>
                <td class="text-center">{{isCompleted}}</td>
            </tr>
        {{/plannerList}}
        </tbody>
    </table>

    <a href="/planner/new" class="btn btn-primary">새 항목 추가</a>
</div>

{{>layouts/footer}}

<style>
    /* 테이블 스타일 */
    table th, table td {
        padding: 10px 15px;
        text-align: center;
    }

    table td, table th {
        vertical-align: middle;
    }

    /* 테이블에 여백 추가 (알림창 아래로 밀리도록) */
    .container {
        padding-top: 20px;
    }
</style>